{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "helm-values": {
    "managerFilePatterns": ["/\\.yaml(?:\\.j2)?$/"],
    "pinDigests": true
  },
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml(?:\\.j2)?$/"],
    "pinDigests": true
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "pinDigests": true
    },
    {
      "matchDatasources": ["docker"],
      "automerge": false,
      "automergeType": "branch",
      "matchUpdateTypes": ["digest"],
      "ignoreTests": true
    }
  ]
}
