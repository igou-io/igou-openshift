{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "helm-values": {
    "managerFilePatterns": ["/\\.yaml(?:\\.j2)?$/"]
  },
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml(?:\\.j2)?$/"]
  },
  "packageRules": [
    {
      "description": "Default: Automerge all non major updates after 3 days. Pin digests",
      "matchDatasources": ["docker"],
      "pinDigests": true,
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["digest", "minor", "patch"],
      "ignoreTests": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Default: Automerge all non major updates after 3 days. Pin digests",
      "matchDatasources": ["docker"],
      "pinDigests": true,
      "automerge": false,
      "automergeType": "pr",
      "matchUpdateTypes": ["major"],
      "ignoreTests": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Automerge all igou images",
      "matchDatasources": ["docker"],
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["digest","major", "minor", "patch"],
      "matchPackageNames": ["/igou/"],
      "ignoreTests": true
    }
  ]
}
