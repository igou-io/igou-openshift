extends: default

ignore:
  - .helm/charts/*/templates/
  - tools/kube-burner/*/templates/

rules:
  line-length:
    max: 250
    allow-non-breakable-inline-mappings: true
  truthy:
    check-keys: false
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable
  document-start: disable
  indentation:
    spaces: 2
    indent-sequences: whatever
